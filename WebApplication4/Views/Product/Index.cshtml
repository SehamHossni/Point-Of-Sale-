@model IEnumerable<ProductVM>

<div class="card-box mb-30">
    <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Add New Product</a>
    @*<a class="btn btn-primary" asp-controller="Product" asp-action="InStock">Check Stock</a>*@

    <h2 class="h4 pd-20">Best Selling Products</h2>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th class="table-plus datatable-nosort">Product</th>
                <th>Name</th>
                <th>Color</th>
                <th>Size</th>
                <th>Price</th>

                <th class="datatable-nosort">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="table-plus">
                        <img src="~/Image/@item.Img" width="70" height="70" alt="">
                    </td>
                    <td>
                        <h5 class="font-16">@item.Name</h5>

                    </td>
                    <td>@item.Color</td>
                    <td>@item.Size</td>
                    <td>@item.Price</td>

                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"><i class="dw dw-eye"></i> View</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id"><i class="dw dw-edit2"></i> Edit</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure to delete this Product @item.Name ?')"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



